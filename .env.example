# Environment configuration
NODE_ENV=production

# Server settings
PORT=5000
JWT_SECRET=change-this-to-a-secure-random-string

# Database configuration
DATABASE_URL=postgres://your-database-connection-string
NETLIFY_DATABASE_URL=postgres://your-netlify-database-string

# Data storage (fallback for local development)
DATA_FILE_PATH=./data.json

# CORS settings - set to your actual domain in production
CORS_ORIGIN=https://yourdomain.com

# Admin settings
ADMIN_KEY=change-this-to-a-secure-admin-key